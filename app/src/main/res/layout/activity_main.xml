<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/m_black"
    >

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:textColor="@color/ac_4"
        android:ems="10"
        android:gravity="right|center_vertical|bottom"
        android:maxLength="12"
        android:padding="10dp"
        android:textSize="48sp" />

    <LinearLayout
        android:id="@+id/llOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/ac_4"
            android:elevation="10dp"
            android:background="@drawable/button_bg_sci"
            android:tag="@string/scientific"
            android:text="sin" />

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:textColor="@color/ac_4"
            android:elevation="10dp"
            android:background="@drawable/button_bg"
            android:text="7"
            android:tag="7"/>

        <Button
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/ac_4"
            android:background="@drawable/button_bg"
            android:onClick="onDigit"
            android:text="8"
            android:tag="8"/>

        <Button
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:textColor="@color/ac_4"
            android:background="@drawable/button_bg"
            android:text="9"
            android:tag="9"/>
        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClear"
            android:textColor="@color/ac_4"
            android:background="@drawable/button_bg_clr"
            android:text="CLR" />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/ac_4"
            android:elevation="10dp"
            android:background="@drawable/button_bg_sci"
            android:tag="@string/scientific"
            android:text="Cos" />
        <Button
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:textColor="@color/ac_4"
            android:background="@drawable/button_bg"
            android:text="4"
            android:tag="4"
            />

        <Button
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:textColor="@color/ac_4"
            android:background="@drawable/button_bg"
            android:text="5"
            android:tag="5"/>

        <Button
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/ac_4"
            android:background="@drawable/button_bg"
            android:onClick="onDigit"
            android:text="6"
            android:tag="6"/>

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onOperator"
            android:textColor="@color/ac_4"
            android:background="@drawable/button_bg_op"
            android:text="*"
            android:tag="*"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/ac_4"
            android:elevation="10dp"
            android:background="@drawable/button_bg_sci"
            android:tag="@string/scientific"
            android:text="tan" />
        <Button
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:textColor="@color/ac_4"
            android:background="@drawable/button_bg"
            android:text="1"
            android:tag="1"/>

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/ac_4"
            android:background="@drawable/button_bg"
            android:onClick="onDigit"
            android:text="2"
            android:tag="2"/>

        <Button
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:tag="3"
            android:textColor="@color/ac_4"
            android:background="@drawable/button_bg"
            android:text="3" />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/ac_4"
            android:background="@drawable/button_bg_op"
            android:onClick="onOperator"
            android:text="-"
            android:tag="-"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnPow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/ac_4"
            android:elevation="10dp"
            android:background="@drawable/button_bg_sci"
            android:tag="@string/scientific"
            android:text="pow" />
        <Button
            android:id="@+id/btnZero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:textColor="@color/ac_4"
            android:background="@drawable/button_bg"
            android:text="0"
            android:tag="0"/>

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:textColor="@color/ac_4"
            android:background="@drawable/button_bg_op"            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onOperator"
            android:tag="/"
            android:text="/" />



        <Button
            android:id="@+id/btnMod"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onOperator"
            android:textColor="@color/ac_4"
            android:background="@drawable/button_bg_op"
            android:text="%"
            android:tag="%"/>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onOperator"
            android:textColor="@color/ac_4"
            android:tag="+"
            android:background="@drawable/button_bg_op"
            android:text="+" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSci"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnInv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/ac_4"
            android:elevation="10dp"
            android:background="@drawable/button_bg_sci"
            android:tag="@string/scientific"
            android:text="Inv" />
        <Button
            android:id="@+id/btnExp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/ac_4"
            android:elevation="10dp"
            android:background="@drawable/button_bg_sci"
            android:tag="@string/scientific"
            android:text="exp" />
        <Button
            android:id="@+id/btnSqu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/ac_4"
            android:elevation="10dp"
            android:background="@drawable/button_bg_sci"
            android:tag="@string/scientific"
            android:text="Sqrt" />
        <Button
            android:id="@+id/btnLog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/ac_4"
            android:elevation="10dp"
            android:background="@drawable/button_bg_sci"
            android:tag="@string/scientific"
            android:text="Log" />
        <Button
            android:id="@+id/btnLan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/ac_4"
            android:elevation="10dp"
            android:background="@drawable/button_bg_sci"
            android:tag="@string/scientific"
            android:text="lan" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onEqual"
            android:textColor="@color/ac_4"
            android:background="@drawable/button_bg_eq"
            android:text="=" />
    </LinearLayout>

</LinearLayout>